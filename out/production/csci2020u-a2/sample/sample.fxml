<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <HBox GridPane.rowIndex = "0" GridPane.columnSpan = "2" alignment="CENTER" spacing = "5">
        <Button id="ul" text="Upload" onAction="#handleUpload" fx:id="upload" prefWidth="250" prefHeight="50"/>
        <Button id="dl" text="Download" onAction="#handleDownload" fx:id="download" prefWidth="250" prefHeight="50"/>
    </HBox>
    <TableView fx:id="localTable" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <columns>
            <TableColumn fx:id="local" text="Local Files" prefWidth="250">
                <cellValueFactory>
                    <PropertyValueFactory property="localFiles"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TableView fx:id="sharedTable" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <columns>
            <TableColumn fx:id="shared" text="Shared Files" prefWidth="250">
                <cellValueFactory>
                    <PropertyValueFactory property="sharedFiles"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</GridPane>